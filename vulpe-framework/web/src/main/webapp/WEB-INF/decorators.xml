<decorators defaultdir="/WEB-INF/decorators">
	<excludes>
		<pattern>*/ajax*</pattern>
		<pattern>/login.jsp*</pattern>
		<pattern>/accessDenied.jsp*</pattern>
		<pattern>*/errors/*</pattern>
		<pattern>*/j_spring_security_check*</pattern>
		<pattern>*/authenticator?loginError=*</pattern>
	</excludes>
	<decorator name="default" page="site.jsp">
		<pattern>/*</pattern>
	</decorator>
	<decorator name="frontend" page="frontend/site.jsp">
		<pattern>*/frontend*</pattern>
	</decorator>
	<decorator name="authenticator" page="authenticator.jsp">
		<pattern>*/authenticator</pattern>
	</decorator>
</decorators>
